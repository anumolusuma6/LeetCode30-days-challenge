# Write your MySQL query statement below
SELECT c.Department, c.Employee, c.Salary
FROM (
  SELECT
    b.name AS Department,
    a.name AS Employee,
    a.salary AS Salary,
    RANK() OVER (PARTITION BY b.name ORDER BY a.salary DESC) AS rnk
  FROM Employee a
  LEFT JOIN Department b ON a.departmentId = b.id
  WHERE b.name IS NOT NULL
) c
WHERE rnk = 1;

