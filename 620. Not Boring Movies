Select id, movie, description, rating from Cinema where id % 2=1 and description != 'boring' order by rating desc

--or

Select id, movie, description, rating from Cinema where id % 2=1 and description like '%boring%' order by rating desc

--or 

select id, movie, description, rating from Cinema where id % 2 != 0 and description != 'boring' order by rating desc
